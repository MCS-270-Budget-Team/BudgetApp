<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/light_grey"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_marginTop="3dp">
    <ImageButton
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/baseline_add_white_18"
        android:layout_weight="0.8"
        android:backgroundTint="#8144EF"
        android:background="#8144EF"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.2"
        android:orientation="vertical"
        android:weightSum="2">
        <Button
            android:id="@+id/goal_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:text="Pay the Cable Bill on time"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:backgroundTint="@color/light_grey"
            android:textAllCaps="false"/>
        <ProgressBar
            android:id="@+id/level_progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="75"
            android:progressTint="#8144EF"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:text="Level 1"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>