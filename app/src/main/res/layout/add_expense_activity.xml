<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Paycheck"
        android:textColor="@color/black"
        android:textSize="32sp">
    </TextView>
    <EditText
        android:id="@+id/job_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/job">
    </EditText>
    <EditText
        android:id="@+id/paycheck_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/amount_paycheck">
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_input"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/date_input"></TextView>

        <Button
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE">
        </Button>
    </LinearLayout>


    <Button
        android:id="@+id/add_paycheck_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_button">
    </Button>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Bills"
        android:textColor="@color/black"
        android:textSize="32sp">
    </TextView>
    <EditText
        android:id="@+id/bill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bill_title">
    </EditText>
    <EditText
        android:id="@+id/bill_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/amount_bill">
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date1_input"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/date1_input"></TextView>

        <Button
            android:id="@+id/date1_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE">
        </Button>
    </LinearLayout>
    <Button
        android:id="@+id/add_bill_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add">
    </Button>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp">
    </Space>
    <Button
        android:id="@+id/view_expense_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_expense">
    </Button>
</LinearLayout>