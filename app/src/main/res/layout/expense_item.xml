<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="fill_horizontal"
    android:weightSum="4"
    android:background="?textColor">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/expense_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="25dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:text="Housing"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:gravity="left|bottom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/expense_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:paddingLeft="20dp"
                    android:text="Recommended: $800"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:gravity="left|top"/>
                <TextView
                    android:id="@+id/expense_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:paddingLeft="20dp"
                    android:text="Max: $800"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/expense_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:layout_weight="1.2"
            android:padding="5dp"
            android:text="10%"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_gravity="right"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginRight="8dp"
            >
            <ImageButton
                android:id="@+id/edit"
                android:src="@drawable/baseline_edit_white_18"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textSize="13dp"
                android:padding="10dp"
                android:backgroundTint="?buttonColor"
                android:textColor="@color/red"/>
            <ImageButton
                android:id="@+id/action"
                android:src="@drawable/baseline_delete_white_18"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textSize="13dp"
                android:padding="10dp"
                android:backgroundTint="?buttonColor"
                android:textColor="@color/red"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>