<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?backgroundColor</item>
        <item name="colorPrimaryVariant">?backgroundColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Custom theme color -->
        <item name="backgroundColor">#0D1013</item>
        <item name="buttonColor">#212930</item>
        <item name="textColor">#2E3943</item>
        <item name="progressColor">#3B4956</item>
        <item name="titleColor">#256D66</item>
    </style>

